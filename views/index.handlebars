<div class="row">
    <div class="col-md-6">
        <h2 class="text-success">Uneaten</h2>
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item list-group-item-dark">{{id}}. {{burger_name}} <span class="btn btn-success" data-id="burger{{id}}">Eat me</span></li>
                {{/unless}}
            {{/each}}


        </ul>

    </div>
    <div class="col-md-6">
        <h2 class="text-danger">Eaten</h2>

    </div>
</div>